{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "qemu-debug",
			"type": "shell",
			"command": "qemu-system-x86_64 -s -S build/haiirOS.iso",
			"isBackground": true,
			"dependsOn": "make iso",
			// to make vscode not wait for finishing this preLaunchTask
			"problemMatcher": [
				{
					"pattern": [
						{
					  		"regexp": ".",
					  		"file": 1,
					  		"location": 2,
					  		"message": 3
						}
				  	],
				  	"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": ".",
					}
				}
			]
		},
		{
			"label": "make iso",
			"type": "shell",
			"command": "make iso"
		}
	]
}