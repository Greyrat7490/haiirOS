{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/haiirOS.bin",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "qemu-debug"
        },
        {
            "type": "by-gdb",
            "request": "launch",
            "name": "Launch(remote)",
            "program": "${workspaceFolder}/build/haiirOS.bin",
            "cwd": "${workspaceRoot}",
            "remote": {
                "enabled": true,
                "address": ":1234",
                "mode": "remote",
                "execfile": "${workspaceFolder}/build/haiirOS.iso"
            },
            "preLaunchTask": "qemu-debug"
        }
    ]
}